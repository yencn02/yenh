<% content_for :head do %>
  <%= stylesheet_link_tag 'login' %>
  <%= javascript_include_tag 'login' %>
<% end %>

<img id="top" src="/assets/top.png" alt="">
<div id="form_container">
  <h1><a>Sign In</a></h1>
  <%= form_tag session_path, :class => "appnitro" do -%>
    <div class="form_description">
      <h2>Sign In</h2>
      <p>This is your form description. Click here to edit.</p>
    </div>
    <ul >

      <li>
        <%= label_tag 'login'%>
        <div>
          <%= text_field_tag 'login', @login, :class => "element text medium" %>
        </div>
      </li>
      <li>
        <%= label_tag 'password'%>
        <div>
          <%= password_field_tag 'password', nil, :class => "element text medium" %>
        </div>
      </li>		<li>
        <label class="description"> </label>
        <span>
          <%= check_box_tag 'remember_me', '1', @remember_me, :class => "element checkbox" %>
          <%= label_tag 'remember_me', 'Remember me', :class => "choice"%>
        </span>
      </li>

      <li class="buttons">
        <%= submit_tag 'Sign In' %>
        <%= link_to "Cancel","/" %>
      </li>
    </ul>
  <% end %>
  <div id="footer">
			Generated by YenH
  </div>
</div>
<img id="bottom" src="/assets/bottom.png" alt="">