<% content_for :head do %>
  <%= stylesheet_link_tag 'login' %>
  <%= javascript_include_tag 'login' %>
<% end %>

<img id="top" src="/assets/top.png" alt="">
<div id="form_container">
  <h1><a>Sign Up</a></h1>
  <%= form_for :user, :url => users_path, :html => {:class => "appnitro"} do |f| -%>
    <div class="form_description">
      <h2>Sign Up</h2>
      <p>This is your form description. Click here to edit.</p>
    </div>
    <% @user.password = @user.password_confirmation = nil %>

    <%= error_messages_for :user %>
    <ul >

      <li>
        <%= label_tag 'login'%>
        <div>
          <%= f.text_field :login, :class => "element text medium" %>
        </div>
      </li>
      <li>
        <%= label_tag 'email'%>
        <div>
          <%= f.text_field :email, :class => "element text medium" %>
        </div>
      </li>
      <li>
        <%= label_tag 'password'%>
        <div>
          <%= f.password_field :password, :class => "element text medium" %>
        </div>
      </li>
      <li>
        <%= label_tag 'password'%>
        <div>
          <%= f.password_field :password, :class => "element text medium" %>
        </div>
      </li>
      <li>
        <%= label_tag 'password_confirmation', 'Confirm Password' %>
        <div>
          <%= f.password_field :password_confirmation, :class => "element text medium" %>
        </div>
      </li>
      <li class="buttons">
        <%= submit_tag 'Sign Up' %>
        <%= link_to "Cancel","/" %>
      </li>
    </ul>
  <% end %>
  <div id="footer">
			Generated by YenH
  </div>
</div>
<img id="bottom" src="/assets/bottom.png" alt="">